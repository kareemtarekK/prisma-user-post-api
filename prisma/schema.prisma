generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  user
  admin
  superadmin
  supervisor
}

model User {
  id           Int           @id @default(autoincrement())
  firstName    String
  lastName     String
  age          Int
  role         Role          @default(user)
  posts        Post[]        @relation("writtenPosts")
  // editedPosts Post[]   @relation("edittedPosts")
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  profileImage ProfileImage?
  email        String?       @unique

  @@unique([firstName, lastName])
  @@index([email])
}

model Post {
  id         String     @id @default(uuid())
  title      String
  data       Json
  active     Boolean
  user_id    Int
  user       User       @relation("writtenPosts", fields: [user_id], references: [id])
  // editor_id Int?
  // editor    User?    @relation("edittedPosts", fields: [editor_id], references: [id])
  categories Category[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model Category {
  id        String   @id @default(uuid())
  title     String
  posts     Post[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProfileImage {
  id        String   @id @default(uuid())
  url       String
  user_id   Int      @unique
  user      User     @relation(fields: [user_id], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
